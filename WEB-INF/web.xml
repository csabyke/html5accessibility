<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
     xmlns:j2ee="http://java.sun.com/xml/ns/javaee"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/j2ee/web-app_3.0.xsd">


	
	
	
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
  <display-name>REST</display-name>
  <servlet>
    <display-name>JAX-RS REST Servlet</display-name>
    <servlet-name>REST-Servlet</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>de.hs_esslingen.csleit01.studienarbeit</param-value>
        </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>REST-Servlet</servlet-name>
    <url-pattern>/restnoguice/*</url-pattern>
  </servlet-mapping>
    
   
     <listener>
       <listener-class>de.hs_esslingen.csleit01.studienarbeit.GuiceServletConfig</listener-class>
     </listener>
     
     <filter>
       <filter-name>Guice Filter</filter-name>
       <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
     </filter>
     <filter-mapping>
       <filter-name>Guice Filter</filter-name>
       <url-pattern>/*</url-pattern>
     </filter-mapping>
     
     
   
    
    

</web-app>
